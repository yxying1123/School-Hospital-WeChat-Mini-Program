<form action="" method="post" class="basic-grey">
 
 <h1>预约门诊时间

         
 </h1>

 <label>

          <span>姓名 :</span>
          <input model:value="{{name}}" id="themplate" type="text" name="name" placeholder="请填写姓名" />

                  

 </label>

 <label>

          <span>学号 :</span>

          <input  model:value="{{studynum}}" id="name" type="text" name="name" placeholder="请填写学号"/>

